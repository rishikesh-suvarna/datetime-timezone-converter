{
  "name": "datetime-timezone-converter",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "TZ=UTC jest",
    "test:unit": "TZ=UTC jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e --detectOpenHandles"
  },
